WHITESPACE = _{ (" " | "\r\n" | "\n")+ }

number = { ASCII_DIGIT+ }
identifier = { (ASCII_ALPHA | "_") ~ (ASCII_ALPHA | ASCII_DIGIT | "_")* }
atom = { number | identifier }
operator = { "+" | "-" | "*" | "/" }
expression = { atom ~ (operator ~ atom)* }

statement = {
  (
    expression
  ) ~
  ";"
}

file = { SOI ~ statement* ~ EOI }
